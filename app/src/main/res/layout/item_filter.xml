<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="io.github.bonarmada.gw_challenge.data.model.CategoriesEnum" />
    </data>

    <CheckedTextView
        android:id="@+id/itemClickable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_rounded_8dp"
        android:foreground="?selectableItemBackground"
        android:padding="@dimen/grid_16"
        android:src="@drawable/ic_filter_sliders"
        android:text="@{item.stringValue}"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/cities" />
</layout>